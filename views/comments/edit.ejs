<%- include("../partials/header") %> 


<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit Comment </h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="form-login">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="comment[userID]">ID</label>
                <input class="form-control" type="text" name="comment[userID]" value="<%= comment.userID %>" readonly>
            </div>
            <div class="form-group">
                <label for="comment[name]">Name</label>
                <input class="form-control" type="text" name="comment[name]" value="<%= comment.name %>">
            </div>
            <div class="form-group">
                <label for="comment[gender]">Gender</label>
                <select name="comment[gender]" class="form-control">
                    <option hidden disabled selected value> -- select an option -- </option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Others">Others</option>
                </select>
                <!-- <input class="form-control" type="radio" name="comment[gender]" placeholder="Name"> -->
            </div>
            <div class="form-group">
                <label for="comment[age]">Age</label>
                <input class="form-control" type="number" name="comment[age]" value="<%= comment.age %>" min="1">
            </div>
            <div class="form-group">
                <label for="comment[address]">Address</label>
                <input class="form-control" type="text" name="comment[address]" value="<%= comment.address %>">
            </div>
            <div class="form-group">
                <label for="comment[occupation]">Occupation</label>
                <input class="form-control" type="text" name="comment[occupation]" value="<%= comment.occupation %>">
            </div>
            <div class="form-group">
                <label for="comment[count]">Family Members' Count</label>
                <input class="form-control" type="number" name="comment[count]" value="<%= comment.count %>" min="1">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <div class="col-md-12 text-center">
            <a href="/campgrounds/<%= campground_id %>">Go Back</a>
        </div>
        
    </div>
    </div>
    
</div>
<%- include("../partials/footer") %> 
