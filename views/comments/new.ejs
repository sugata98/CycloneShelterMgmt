<%- include("../partials/header") %> 

<% var ID = function () { return Math.random().toString(36).substr(2, 9);}; %>


<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Add New Cyclone Victim to <%= campground.name %> </h1>
    </div>
    
    <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="form-login">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <label for="comment[userID]">ID</label>
                <input class="form-control" type="text" name="comment[userID]" value="<%=ID()%>" readonly>
            </div>
            <div class="form-group">
                <label for="comment[name]">Name</label>
                <input class="form-control" type="text" name="comment[name]" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="comment[gender]">Gender</label>
                <select name="comment[gender]" class="form-control">
                    <option hidden disabled selected value> -- select an option -- </option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Others">Others</option>
                </select>
                <!-- <input class="form-control" type="radio" name="comment[gender]" placeholder="Name"> -->
            </div>
            <div class="form-group">
                <label for="comment[age]">Age</label>
                <input class="form-control" type="number" name="comment[age]" placeholder="Age" min="1">
            </div>
            <div class="form-group">
                <label for="comment[address]">Address</label>
                <input class="form-control" type="text" name="comment[address]" placeholder="Victim's Address">
            </div>
            <div class="form-group">
                <label for="comment[occupation]">Occupation</label>
                <input class="form-control" type="text" name="comment[occupation]" placeholder="Victim's Occupation">
            </div>
            <div class="form-group">
                <label for="comment[count]">Family Members' Count</label>
                <input class="form-control" type="number" name="comment[count]" placeholder="Number of members in Family" min="1">
            </div>
            <!-- <div class="form-group">
                <label for="comment[text]">Add Comment</label>
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div> -->
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <div class="col-md-12 text-center">
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </div>
    </div>
    </div>
    
</div>

<%- include("../partials/footer") %> 
