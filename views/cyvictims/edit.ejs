<%- include("../partials/header") %> 


<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit Cyvictim </h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="form-login">
        <form action="/shelters/<%= shelter_id %>/cyvictims/<%= cyvictim._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="cyvictim[userID]">ID</label>
                <input class="form-control" type="text" name="cyvictim[userID]" value="<%= cyvictim.userID %>" readonly>
            </div>
            <div class="form-group">
                <label for="cyvictim[name]">Name</label>
                <input class="form-control" type="text" name="cyvictim[name]" value="<%= cyvictim.name %>">
            </div>
            <div class="form-group">
                <label for="cyvictim[gender]">Gender</label>
                <select name="cyvictim[gender]" class="form-control">
                    <option hidden disabled selected value> -- select an option -- </option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Others">Others</option>
                </select>
                <!-- <input class="form-control" type="radio" name="cyvictim[gender]" placeholder="Name"> -->
            </div>
            <div class="form-group">
                <label for="cyvictim[age]">Age</label>
                <input class="form-control" type="number" name="cyvictim[age]" value="<%= cyvictim.age %>" min="1">
            </div>
            <div class="form-group">
                <label for="cyvictim[address]">Address</label>
                <input class="form-control" type="text" name="cyvictim[address]" value="<%= cyvictim.address %>">
            </div>
            <div class="form-group">
                <label for="cyvictim[occupation]">Occupation</label>
                <input class="form-control" type="text" name="cyvictim[occupation]" value="<%= cyvictim.occupation %>">
            </div>
            <div class="form-group">
                <label for="cyvictim[count]">Family Members' Count</label>
                <input class="form-control" type="number" name="cyvictim[count]" value="<%= cyvictim.count %>" min="1">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <div class="col-md-12 text-center">
            <a href="/shelters/<%= shelter_id %>/cyvictims">Go Back</a>
        </div>
        
    </div>
    </div>
    
</div>
<%- include("../partials/footer") %> 
