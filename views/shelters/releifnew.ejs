<%- include("../partials/header") %> 

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Add Requirements to <%= shelter.name %> </h1>
    </div>
    
    <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="form-login">
        <form action="/shelters/<%= shelter._id %>/releif" method="POST">
            
            <div class="form-group">
                <label for="releif[water]">Water</label>
                <input class="form-control" type="number" name="releif[water]" placeholder="Quantity in Litres">
            </div>

            <div class="form-group">
                <label for="releif[kits]">First Aid Kits</label>
                <input class="form-control" type="number" name="releif[kits]" placeholder="No. of Items">
            </div>

            <div class="form-group">
                <label for="releif[consumables]">Consumables</label>
                <textarea class="form-control" type="text" name="releif[consumables]" placeholder="Enter in each new line&#10;[Item]:[Quantity][Units]"></textarea>
            </div>
            
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <div class="col-md-12 text-center">
        <a href="/shelters/<%= shelter._id %>/releif">Go Back</a>
    </div>
    </div>
    </div>
    
</div>

<%- include("../partials/footer") %> 
