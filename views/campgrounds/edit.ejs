<%- include("../partials/header") %> 

<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%= campground.name %> </h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-6">
        <div class="form-login">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="campground[name]">Shelter Name</label>
                <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %> ">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/*">
            </div>
            <div class="form-group">
                <label for="campground[capacity]">Shelter Capacity</label>
                <input class="form-control" type="number" name="campground[capacity]" value="<%= campground.capacity %>">
            </div>
            <div class="form-group">
                <label for="campground[description]">Shelter Description</label>
                <textarea class="form-control" name="campground[description]" rows="4" style="white-space: pre-line;"><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <label for="campground[address]">Shelter Address</label>
                <textarea class="form-control" name="campground[address]" rows="4" style="white-space: pre-line;"><%= campground.address %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <div class="col-md-12 text-center">
            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
        
    </div>
    </div>
    
</div>

<%- include("../partials/footer") %> 
